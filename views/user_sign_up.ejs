<div class="sign-box"> 
    <h1 class="title"> Sign up</h1>
    <form action="/users/create" method="post">
        <input id="in1"  class="top-name" type="text" name="name" placeholder="Your Name" required>
        <br>
        <input id="in2"  type="email" name="email" placeholder="Your Email" required>
        <br>
        <input id="in3"  type="password" name="password" placeholder="Password" required>
        <br>
        <input id="in4"  type="password" name="confirm_password" placeholder="Confirm Password" required>
        <br>
        <input id="in5" class="submit-button" type="submit" value="Sign Up">
    </form>
    <p>
       <div class="Or">
         OR 
       </div>
       <div class="Google">
        <a href="/users/auth/google"><i class="fa-brands fa-google"></i> &nbsp;&nbsp; Sign up via Google  </a>
       </div>
    </p>
</div>



